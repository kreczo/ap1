<Window x:Class="Gui.RegisterWindow"
        DataContext="RegisterViewModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gui"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="350" Width="500">


    <Grid Background="{DynamicResource {x:Static SystemColors.GradientActiveCaptionBrushKey}}">
        <Button x:Name="SigInButton" Content="{Binding btnClick}" HorizontalAlignment="Left" Margin="212,243,0,0" VerticalAlignment="Top" Width="76" Click="button_Click" Height="15"/>
        <TextBox x:Name="NameBox" HorizontalAlignment="Left" Height="22" Margin="190,90,0,0" TextWrapping="Wrap" Text="{Binding txtName}" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="CityBox" HorizontalAlignment="Left" Height="22" Margin="190,117,0,0" TextWrapping="Wrap" Text="{Binding txtCity}" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
